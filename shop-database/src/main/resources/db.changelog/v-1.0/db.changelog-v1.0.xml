        <rollback>
            <sqlFile dbms="mysql"
                     encoding="utf8"
                     endDelimiter="\nGO"
                     path="drop-user-and-role-tables.sql"
                     relativeToChangelogFile="true"
                     splitStatements="true"
                     stripComments="true"/>
        </rollback>
    </changeSet>

    <changeSet id="3" author="art">
        <sqlFile dbms="mysql"
                 encoding="utf8"
                 endDelimiter="\nGO"
                 path="create-order-and-orderitem-tables.sql"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"/>
        <rollback></rollback>
    </changeSet>


