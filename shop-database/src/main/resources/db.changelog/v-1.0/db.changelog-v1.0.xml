            <sqlFile dbms="mysql"
                     encoding="utf8"
                     endDelimiter="\nGO"
                     path="drop-user-and-role-tables.sql"
                     relativeToChangelogFile="true"
                     splitStatements="true"
                     stripComments="true"/>
        </rollback>
    </changeSet>

