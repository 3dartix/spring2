    <changeSet id="1" author="art">
        <sqlFile dbms="mysql"
                 encoding="utf8"
                 endDelimiter="\nGO"
                 path="create-user-and-role-tables.sql"
                 relativeToChangelogFile="true"
                 splitStatements="true"
